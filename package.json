{
  "name": "diacritics-normalizr",
  "version": "1.0.1",
  "description": "The simple library for removing diacritics/accents from a string.",
  "repository": "git@github.com:Wojteek/diacritics-normalizr.git",
  "bugs": {
    "url": "https://github.com/Wojteek/diacritics-normalizr/issues"
  },
  "homepage": "https://github.com/Wojteek/diacritics-normalizr",
  "author": "Wojteek",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "types/*.d.ts",
    "CHANGELOG.md",
    "README.md"
  ],
  "keywords": [
    "diacritics",
    "accents",
    "normalize",
    "diacritic",
    "string"
  ],
  "typings": "types/index.d.ts",
  "scripts": {
    "version": "yarn release:changelog && git add -A CHANGELOG.md",
    "lint": "yarn eslint ./src/**/*.ts",
    "build": "yarn rollup -c",
    "commit": "git-cz",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "test": "yarn jest --maxWorkers=2"
  },
  "engines": {
    "node": ">= 7.10.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.23",
    "conventional-github-releaser": "^3.1.3",
    "conventional-recommended-bump": "^6.0.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.4.0",
    "eslint-plugin-jest": "^22.17.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "rollup": "^1.21.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-typescript2": "^0.24.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.3"
  }
}
